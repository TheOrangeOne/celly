{% extends "template.jinja2" %}
{% block title %}{{ date }}{% endblock %}
{% block head %}
<style>
  .col {
    padding-left: 5px;
    padding-right: 5px;
  }
  .logo {
    width: 1.1em;
    margin-right: 0.2em;
    vertical-align: middle;
  }
</style>
{% endblock %}
{% block content %}
<h1>
  {% if prev_page %}
  <a href="{{ prev_page }}">←</a>
  {% else %}
  ←
  {% endif %}
  {{ date }}
  {% if next_page %}
  <a href="{{ next_page }}">→</a>
  {% else %}
  →
  {% endif %}
</h1>
<h2>
  <b>games</b>
  <a href="{{ ratings_page(date) }}">ratings</a>
</h2>
<table style='font-size: 1.1em; font-family: "Lucida Console", Monaco, monospace; line-height: 1.5; margin-left:auto; margin-right:auto;'>
  <tbody>
    {% for match in matches %}
    <tr>
      {% if match.done %}
        <td class="col">
          <img class="logo" src="{{ match.away.svg }}"/>
          <a href="{{ team_page(match.away.abbr) }}">{{ match.away.abbr }}</a>
        </td>
        <td class="col">
          {{ match.away.score }}-{{ match.home.score }}
        </td>
        {{ WTF }}
        <td class="col">
          <a href="{{ team_page(match.home.abbr) }}">{{ match.home.abbr }}</a>
          <img class="logo" src="{{ match.home.svg }}"/>
        </td>
      {% else %}
        <td class="col">
          <img class="logo" src="{{ match.away.svg }}"/>
          <a href="{{ team_page(match.away.abbr) }}">{{ match.away.abbr }}</a>
          <span>
            at
          </span>
          <a href="{{ team_page(match.home.abbr) }}">{{ match.home.abbr }}</a>
          <img class="logo" src="{{ match.home.svg }}"/>
          {{ match.date }}
        </td>
      {% endif %}
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
